@page "/minha-conta"
@using WinglyShopAdmin.App.Components.Profile

@attribute [Authorize]

<MudContainer MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem md="12" sm="12" xs="12">
            <MudPaper Outlined=true>
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Color="Color.Secondary">@UserFullAccountInformation?.Name[0]</MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h5">@UserFullAccountInformation?.Name</MudText>
                            <MudText Typo="Typo.body2">@UserFullAccountInformation?.Email</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudDivider />
                    <MudCardContent>
                        <MudGrid Spacing="2">
                            <MudItem md="6" sm="6" xs="6">
                                <UserProfileInformationCard Model="UserFullAccountInformation" />
                            </MudItem>

                            <MudItem md="6" sm="6" xs="6">
                                <UserAccountInformationCard Model="UserFullAccountInformation" />
                            </MudItem>
                        </MudGrid>
                    </MudCardContent>
                </MudCard>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
