<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3 mb-n1" />
            Editar
        </MudText>
    </TitleContent>
    <DialogContent>
        <EditForm Model="_anyProfileModel" OnValidSubmit=HandleValidSubmit style="width: 400px;">
            <DataAnnotationsValidator />
            <MudDivider />
            <MudGrid>
                <MudItem xs="12" sm="12">
                    <MudCard Elevation="0">
                        <MudCardContent>
                            @if (!string.IsNullOrWhiteSpace(_profileFields[0]))
                            {
                                <MudTextField Label="@_profileFields[0]"
                                              Class="p-3"
                                              Variant="Variant.Outlined"
                                              @bind-Value="_anyProfileModel.FirstField"
                                              For="@(() => _anyProfileModel.FirstField)" />
                            }

                            @if (!string.IsNullOrWhiteSpace(_profileFields[1]))
                            {
                                <MudTextField Label="@_profileFields[1]"
                                              Class="p-3"
                                              Variant="Variant.Outlined"
                                              @bind-Value="_anyProfileModel.SecondField"
                                              For="@(() => _anyProfileModel.SecondField)" />
                            }

                            @if (_profileFields.Count > 2 && !string.IsNullOrWhiteSpace(_profileFields[2]))
                            {
                                <MudTextField Label="@_profileFields[2]"
                                              Class="p-3"
                                              Variant="Variant.Outlined"
                                              @bind-Value="_anyProfileModel.ThirdField"
                                              For="@(() => _anyProfileModel.ThirdField)" />
                            }
                        </MudCardContent>
                        <MudCardActions>
                            <MudGrid Spacing="2">
                                <MudItem xs="6" sm="6">
                                    <MudButton Variant="Variant.Filled"
                                               Color="Color.Error"
                                               Size="Size.Large"
                                               ButtonType="ButtonType.Submit"
                                               FullWidth="true"
                                               Class="ml-auto"
                                               OnClick=CancelAction>
                                        Cancelar
                                    </MudButton>
                                </MudItem>
                                <MudItem xs="6" sm="6">
                                    <MudButton Variant="Variant.Filled"
                                               Color="Color.Primary"
                                               Size="Size.Large"
                                               ButtonType="ButtonType.Submit"
                                               FullWidth="true"
                                               Class="ml-auto">
                                        Salvar
                                    </MudButton>
                                </MudItem>
                            </MudGrid>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
            </MudGrid>
        </EditForm>
    </DialogContent>
    <DialogActions>
    </DialogActions>
</MudDialog>
