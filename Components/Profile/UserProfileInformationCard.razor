
@if (Model is null)
{
    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="250px" />
}
else
{
    <MudPaper Outlined=true>
        <MudCard Style="padding: 8px;">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1" Style="font-weight: bold">Informações do Usuário</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Default" OnClick=EditUserProfileInformation />
                </CardHeaderActions>
            </MudCardHeader>

            <MudDivider />
            <MudCardContent>
                <MudGrid Spacing="1">
                    <MudItem md="6" sm="6" xs="6">
                        <MudTextField @bind-Value="Model.Name"
                                      Label="Nome"
                                      Disabled=true
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense" />
                    </MudItem>
                    <MudItem md="6" sm="6" xs="6">
                        <MudTextField @bind-Value="Model.Surname"
                                      Label="Sobrenome"
                                      Disabled=true
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense" />
                    </MudItem>
                    <MudItem md="12" sm="12" xs="12">
                        <MudTextField @bind-Value="Model.Phone"
                                      Label="Telefone"
                                      Disabled=true
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense" />
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </MudPaper>
}
