<MudAppBar Class="px-8"
           Elevation="0"
           Style="@("background: rgba(255,255,255,0.7)")">
    @if (!IsMiniMenu)
    {
        <MudHidden Breakpoint="Breakpoint.MdAndUp">
            <MudTooltip Arrow="true"
                        Text="Toggle menu">
                <MudIconButton Class="mr-3"
                               Color="Color.Default"
                               Edge="Edge.Start"
                               Icon="@Icons.Material.Filled.Menu"
                               OnClick="AlternarMenuLateral" />
            </MudTooltip>
        </MudHidden>
    }
    <MudSpacer />

    <MudTooltip Arrow="true"
                Text="Buscar Nota Fiscal">
        <MudIconButton Class="mx-3"
                       Color="Color.Default"
                       Icon="@Icons.Material.Filled.Search"
                       OnClick=AbrirPaletaComandos />
    </MudTooltip>

    <MudTooltip Arrow="true"
                Text="Trocar Tema">
        <MudIconButton Class="mx-3"
                       Color="Color.Default"
                       Icon="@Icons.Material.Filled.LightMode"
                       @onclick="@(() => FazerNada())" />
    </MudTooltip>

    <UserMenu UserInfo="_userData" />
</MudAppBar>
